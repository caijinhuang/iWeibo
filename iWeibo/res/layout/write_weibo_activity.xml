<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/page_list_bg" >
    
    <include 
        android:id="@+id/write_title_bar"
        layout="@layout/title_bar_write_wb"/>
    <EditText 
        android:id="@+id/write_content_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_write_Weibo"/>
    <ImageView 
        android:id="@+id/write_with_pic"
        android:padding="5dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_add_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_add_pic" 
            android:textColor="@color/white"
            android:background="@drawable/bt_select_login"/>

        <TextView
            android:id="@+id/text_count"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="5dp"
            android:text="字数剩余：140"
            android:textSize="12dp" 
            android:textColor="@color/black"/>
    </LinearLayout>

</LinearLayout>
